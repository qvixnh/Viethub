@model IEnumerable<Viethub.Models.Dish>
@using Viethub.Help
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th><b>STT</b></th>
                <th><b>Tên món ăn</b></th>
                <th><b>Giá tiền</b></th>
                <th><b>Hình Ảnh</b></th>
                <th><b>Hiển thị</b></th>
                <th><b>Thứ tự</b></th>
                <th><b>Ngày cập nhật</b></th>
                <th></th>
            </tr>

        </thead>

        <tfoot>
            <tr>
                <th><b>STT</b></th>
                <th><b>Tên món ăn</b></th>
                <th><b>Giá tiền</b></th>
                <th><b>Hình ảnh</b></th>
                <th><b>Hiển thị</b></th>
                <th><b>Thứ tự</b></th>
                <th><b>Ngày cập nhật</b></th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            @{var Number = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(Number++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        <img src="~/Content/assets/img/products/@item.img" style="width:50px;" />
                    </td>
                    <td>
                        <!--Html.DisplayFor(modelItem => item.hide)-->
                        @(item.hide.GetValueOrDefault(false) ? "Ẩn": "Hiển thị" )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order)
                    </td>
                    <td>
                        <!--Html.DisplayFor(modelItem => item.datebegin)-->
                        @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </td>
                    <td>
                        @Html.NoEncodeActionLink("<i class=\"fas fa-pen\"></i>", "Edit", "Edit", "Dishes", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-warning btn-square btn-sm" })
                        @Html.NoEncodeActionLink("<i class=\"fas fa-info-circle\"></i>", "Details", "Details", "Dishes", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-info btn-square btn-sm" })
                        @Html.NoEncodeActionLink("<i class=\"fas fa-trash\"></i>", "Delete", "Delete", "Dishes", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger btn-square btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>