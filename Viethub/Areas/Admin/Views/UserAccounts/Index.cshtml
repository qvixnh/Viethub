@using Viethub.Help
@model IEnumerable<Viethub.Models.UserAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Quản lý Người dùng</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><b>STT</b></th>
                        <th><b>Tên</b></th>
                        <th><b>Username</b></th>
                        <th><b>Địa chỉ</b></th>
                        <th><b>Ngày cập nhật</b></th>
                        <th></th>
                    </tr>

                </thead>

                <tfoot>
                    <tr>
                        <th><b>STT</b></th>
                        <th><b>Tên</b></th>
                        <th><b>Username</b></th>
                        <th><b>Địa chỉ</b></th>
                        <th><b>Ngày cập nhật</b></th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @{var Number = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                <!--Html.DisplayFor(modelItem => item.datebegin)-->
                                @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                            </td>
                            <td>
                                @Html.NoEncodeActionLink("<i class=\"fas fa-pen\"></i>", "Edit", "Edit", "UserAccounts", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-warning btn-square btn-sm" })
                                @Html.NoEncodeActionLink("<i class=\"fas fa-trash\"></i>", "Delete", "Delete", "UserAccounts", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger btn-square btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
